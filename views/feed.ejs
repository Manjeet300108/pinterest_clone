<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-700 px-4 md:px-10 py-8 text-white">

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">

        <% posts.forEach(function(post){ %>

        <div class="bg-zinc-800 p-3 rounded-xl shadow-md hover:scale-105 transition duration-300">

            <div class="w-full aspect-square rounded-lg overflow-hidden">
                <img 
                  src="/images/uploads/<%=post.image%>" 
                  class="w-full h-full object-cover"
                  alt="">
            </div>

            <h5 class="mt-3 text-lg font-semibold capitalize">
                <%=post.title%>
            </h5>

            <p class="text-sm opacity-70 mt-1">
                <%=post.description%>
            </p>

            <p class="text-xs opacity-60 mt-2">
                @<%=post.user.username%>
            </p>

        </div>

        <% }) %>

    </div>

</div>

<% include ./partials/footer.ejs %>