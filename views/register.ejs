<% include ./partials/header.ejs  %>


<div class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1460574283810-2aab119d8511?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTM2fHxhYnN0cmFjdHxlbnwwfDB8MHx8fDA%3D')] bg-no-repeat bg-center bg-cover flex items-center justify-center">
