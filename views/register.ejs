<% include ./partials/header.ejs %>

<div
  class="w-full min-h-screen bg-[url('https://images.unsplash.com/photo-1460574283810-2aab119d8511?w=500&auto=format&fit=crop&q=60')] bg-no-repeat bg-center bg-cover flex items-center justify-center px-4">

  <div class="w-full sm:w-3/4 md:w-1/2 lg:w-1/3 bg-white px-6 sm:px-10 py-8 rounded-3xl shadow-xl">

    <h1 class="text-2xl sm:text-3xl text-center font-semibold text-zinc-700 mb-8">
      Create an Account
    </h1>

    <form action="/register" method="post">

      <input class="border-2 rounded-md w-full px-3 py-2 mt-3"
             type="email"
             name="email"
             placeholder="Email">

      <input class="border-2 rounded-md w-full px-3 py-2 mt-3"
             type="text"
             name="username"
             placeholder="Username">

      <input class="border-2 rounded-md w-full px-3 py-2 mt-3"
             type="text"
             name="fullname"
             placeholder="Full Name">

      <input class="border-2 rounded-md w-full px-3 py-2 mt-3"
             type="number"
             name="contact"
             placeholder="Contact">

      <input class="border-2 rounded-md w-full px-3 py-2 mt-3"
             type="password"
             name="password"
             placeholder="Password">

      <input class="w-full px-3 py-2 mt-5 bg-red-600 hover:bg-red-700 transition text-white rounded-full"
             type="submit"
             value="Create New Account">

      <p class="text-xs text-zinc-600 mt-6 text-center px-4">
        By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy.
      </p>

    </form>

    <a class="mt-6 inline-block font-semibold text-sm text-zinc-500 text-center w-full hover:text-zinc-700"
       href="/">
       Already have an account?
    </a>

  </div>
</div>

<% include ./partials/footer.ejs %>