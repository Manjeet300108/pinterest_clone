<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-4 md:px-10 py-6 text-white">
    
    <h1 class="text-xl md:text-2xl font-semibold">
        Create a new post
    </h1>

    <hr class="opacity-10 mt-3">

    <form action="/createpost" 
          method="post" 
          enctype="multipart/form-data"
          class="mt-6 w-full sm:w-2/3 md:w-1/2 lg:w-1/3">

        <!-- Image Upload -->
        <input 
            class="block w-full px-3 py-2"
            type="file" 
            name="postimage">

        <!-- Title -->
        <input 
            class="block w-full px-3 py-2 border-2 rounded-md mt-3 text-black"
            type="text" 
            placeholder="Title" 
            name="title">

        <!-- Description -->
        <textarea 
            class="block w-full min-h-40 px-3 py-2 border-2 rounded-md mt-3 text-black"
            name="description" 
            placeholder="Description"></textarea>

        <!-- Submit -->
        <input 
            class="block w-full px-3 py-2 rounded-md mt-4 bg-red-800 hover:bg-red-700 transition"
            type="submit" 
            value="Create Post">

    </form>
</div>

