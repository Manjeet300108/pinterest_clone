<% include ./partials/header.ejs %>

    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">

        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>

        <div class="profdets flex flex-col items-center mt-20">
            <div class="relative">
                <span id="uploadicon"
                    class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                    <i class="ri-pencil-fill text-zinc-800"></i>
                </span>
                <div class="w-34 h-34 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=user.profileImg%>" alt="">
                </div>
            </div>

            <h1 class="text-3xl font-semibold mt-5">
                <%= user.fullname%>
            </h1>
            <h3 class="text-md">@<%=user.username%>
            </h3>
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 mt-5 text-xs font-semibold">Add New Post</a>
        </div>



        <div class="cards flex flex-wrap gap-10 px-10 mt-12">
            <div class="card">


                <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <a href="/posts/show">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.posts[0]?.image%>" alt="">
                    </a>
                </div>
                <h3 class="text-xl font-semibold mt-3">Your pins</h3>
                <h5 class="text-sm font-medium opacity-60">
                    <%=user.posts.length %> pins
                </h5>
            </div>
        </div>
    </div>


    <% include ./partials/footer.ejs %>